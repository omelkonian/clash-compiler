-- on ghc 8.6 haddock and doctests are broken for clash-prelude
-- this configuration disables them

-- use latest packages from hackage
index-state: HEAD

-- don't generate haddock for all our deps
package *
  documentation: False

package clash-lib
  documentation: True
  flags: +debug
package clash-prelude
  documentation: False
  flags: -doctests
  tests: True
package clash-cosim
  documentation: True
  tests: True

package clash-testsuite
  -- enable cosim & disable systemverilog testing (needs modelsim)
  flags: disable-sv-tests cosim
